{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/base",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["error","never"],
        "quotes": ["error","single"],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "linebreak-style": ["error","unix"],
        "curly": ["error", "multi"],
        "max-depth": ["error", 1]
    }
}
